<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Gas_Group_on_ATEX</fullName>
    <active>true</active>
    <description>Make Gas Group required If ATEX is selected</description>
    <errorConditionFormula>AND ( ATEX_Certificate__c , ISBLANK( TEXT( Gas_Group__c ) ) )</errorConditionFormula>
    <errorMessage>Please select Gas Group</errorMessage>
</ValidationRule>
