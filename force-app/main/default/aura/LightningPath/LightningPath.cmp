<aura:component >
    <aura:attribute name="path" type="object"/>
	<article class="slds-card">
    <div class="slds-card__body slds-card__body_inner">
      <div class="slds-path">
        <div class="slds-grid slds-path__track">
          <div class="slds-grid slds-path__scroller-container">
            <div class="slds-path__scroller" role="application">
              <div class="slds-path__scroller_inner">
                <ul class="slds-path__nav" role="listbox" aria-orientation="horizontal">
                    
                  <li class="{!'slds-path__item '+v.path.field1Style}" role="presentation">
                    <a aria-selected="false" class="slds-path__link" href="javascript:void(0);" id="path-50" role="option" tabindex="-1">
                      <span class="slds-path__stage">
                          {!v.path.field1}
                      </span>
                      <span class="slds-path__title">{!v.path.field1}</span>
                    </a>
                  </li>
                  <li class="{!'slds-path__item '+v.path.field2Style}" role="presentation">
                    <a aria-selected="true" class="slds-path__link" href="javascript:void(0);" id="path-52" role="option" tabindex="0">
                      <span class="slds-path__stage">
                          {!v.path.field2}
                      </span>
                      <span class="slds-path__title">{!v.path.field2}</span>
                    </a>
                  </li>
                  <li class="{!'slds-path__item '+v.path.field3Style}" role="presentation">
                    <a aria-selected="false" class="slds-path__link" href="javascript:void(0);" id="path-54" role="option" tabindex="-1">
                      <span class="slds-path__stage">
                          {!v.path.field3}
                      </span>
                      <span class="slds-path__title">{!v.path.field3}</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
            
        </div>
      </div>
    </div>
  </article>
</aura:component>